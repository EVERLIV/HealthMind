{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "dist/public",
  "functions": {
    "api/[...].ts": {
      "maxDuration": 30,
      "includeFiles": ["server/**", "shared/**"]
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/[...].ts"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
